<style>
    .admin_enlace {
      font-weight: bold;
      text-align: center;
      width: 153px;
      margin: 5px;
      float: left;
      background-color: #EEE;
      border-radius: 10px;
    }
    .admin_enlace:hover {
      background-color: #f5f5f5;
    }
    .admin_enlace > a {
      padding: 10px;
      text-decoration: none;
      display: block;
    }
    .admin_enlace > a > i {
      display: block;
      margin: 5px;
    }
</style>
<div style="display: table">
  <div class="admin_enlace">
    <%= link_to(administracion_cuentas_path) do %>
