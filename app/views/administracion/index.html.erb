    <%= link_to(administracion_planes_dominios_path) do %>
      <%= fa_icon "globe 5x" %>
      planes de dominios
    <% end %>
  </div>
  <div class="admin_enlace">
    <%= link_to(administracion_planes_hospedaje_path) do %>
